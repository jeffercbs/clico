{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "ES2020",
      "esModuleInterop": true,
      "module": "ESNext",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "moduleResolution": "nodenext",
      "outDir": "build",
      "paths": {
         "@/*": [
            "src/*"
         ]
      }
   },
   "ts-node": {
      "esm": true
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "**/node_modules/*"
   ]
}